<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_dark_background"
    tools:context=".home">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/nunitosans_bold"

        android:text="Generate"

        android:textColor="@color/white"
        android:textSize='32dp'
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nationHeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="20dp"
        android:text="Nation"
        android:fontFamily="@font/nunitosans_bold"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/spinner_nations"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spinner_nations"

        style="@style/SpinnerBackground"
        android:spinnerMode="dropdown"
        android:spinnerDropDownItemStyle="@style/spinnerDropdownStyle"
        android:spinnerItemStyle="@style/spinnerTextStyle"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/spinner_flag_preview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginStart="300dp"
        android:layout_marginBottom="405dp"
        android:adjustViewBounds="true"
        android:background="#00FFFFFF"
        android:scaleX="0.4"
        android:scaleY="0.4"
        android:src="@drawable/star"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner_achievements"

        style="@style/SpinnerBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"

        android:layout_marginTop="120dp"
        android:layout_marginEnd="16dp"
        android:spinnerDropDownItemStyle="@style/spinnerDropdownStyle"
        android:spinnerItemStyle="@style/spinnerTextStyle"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spinner_nations" />

    <TextView
        android:id="@+id/achievementHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"

        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/nunitosans_bold"


        android:text="Achievement"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/spinner_achievements"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_nations" />

    <ImageView
        android:id="@+id/difficulty_image_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginStart="300dp"
        android:layout_marginBottom="162dp"
        android:adjustViewBounds="true"
        android:background="#00FFFFFF"
        android:scaleX="0.3"
        android:scaleY="0.3"
        android:src="@drawable/ic_medium_orange_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spinner_difficulties"
        style="@style/SpinnerBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"

        android:layout_marginTop="70dp"
        android:layout_marginEnd="16dp"
        android:spinnerDropDownItemStyle="@style/spinnerDropdownStyle"

        android:spinnerItemStyle="@style/spinnerTextStyle"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_achievements" />

    <ImageView
        android:id="@+id/difficulty_spinner_image_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginStart="300dp"
        android:layout_marginBottom="-55dp"
        android:adjustViewBounds="true"
        android:background="#00FFFFFF"
        android:scaleX="0.3"
        android:scaleY="0.3"

        android:src="@drawable/ic_medium_orange_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/difficultyHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"

        android:layout_marginBottom="20dp"
        android:fontFamily="@font/nunitosans_bold"
        android:text="Difficulty"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/spinner_difficulties"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_achievements" />

</androidx.constraintlayout.widget.ConstraintLayout>