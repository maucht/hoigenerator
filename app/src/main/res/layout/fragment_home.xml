            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="44dp"
            android:fontFamily="@font/nunitosans_bold"
            android:text="Active"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <TextView
